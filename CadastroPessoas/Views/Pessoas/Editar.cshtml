@model CadastroPessoas.Models.Pessoa

@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Pessoas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="custom-control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DtNascimento" class="custom-control-label"></label>
                <input asp-for="DtNascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Sexo" class="custom-control-label"></label>
                <input asp-for="Sexo" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>

</div>