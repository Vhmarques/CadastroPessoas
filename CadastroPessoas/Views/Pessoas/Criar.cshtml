@model CadastroPessoas.Models.Pessoa

@{
    ViewData["Title"] = "Criar";
}

<h2>@ViewData["Title"]</h2>

<h4>Pessoas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="custom-control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DtNascimento" class="custom-control-label"></label>
                <input asp-for="DtNascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Sexo" class="custom-control-label"></label>
                <input asp-for="Sexo" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>